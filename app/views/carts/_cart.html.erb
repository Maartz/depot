<div id="<%= dom_id cart %>">
  <h2 class="font-bold text-lg mb-3">Your Cart</h2>

  <table class="table-auto">
    <% cart.line_items.each do |line| %>
      <tr>

        <td class="text-right"><%= line.quantity %></td>
        <td>&times;</td>
        <td class="pr-2">
          <%= line.product.title %>
        </td>
        <td class="text-right font-bold"><%= number_to_currency(line.total_price) %></td>
      </tr>
    <% end %>

    <tfoot>
      <tr>
        <th class="text-right pr-2 pt-2" colspan="3" ></th>
        <td class="text-right pt-2 font-bold border-t-2 border-black">
          <%= number_to_currency(cart.total_price) %>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

<%= button_to 'Empty Cart', cart, method: :delete, class: 'ml-4 rounded-lg py-1 px-2 text-white bg-red-800' %>
